<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:alpha="0.95"
    android:background="@mipmap/calendar_background1">

    <LinearLayout
        android:id="@+id/index_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:id="@+id/index_sign"
        android:textColor="#ffffff"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
         android:id="@+id/index_sentence"
         android:textSize="16dp"
         android:textColor="#ffffff"
         android:layout_marginTop="20dp"
         android:text="信念是鸟，它在黎明仍然黑暗之际，感觉到了光明。"
         android:layout_width="265dp"
         android:layout_height="wrap_content" />
    </LinearLayout>
        <cn.edu.hebtu.software.peace.util.CircleImageView
            android:id="@+id/index_person"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="35dp"
            android:src="@mipmap/touxiang" />

    </LinearLayout>
    <Button
        android:id="@+id/index_start"
        android:background="@drawable/bt_shape"
        android:textColor="#607B8B"
        android:textSize="15dp"
        android:layout_marginTop="300dp"
        android:text="▶  开始专注"
        android:layout_width="wrap_content"
        android:layout_height="40dp" />

        <View
            android:layout_marginTop="40dp"
            android:layout_height="0.5dp"
            android:background="#708090"
            android:layout_width="match_parent"/>

    </LinearLayout>

    <HorizontalScrollView
       android:layout_marginTop="40dp"
        android:layout_marginLeft="35dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/index_img1"
                android:layout_width="135dp"
                android:layout_height="100dp"
                android:scaleType="fitXY"

                 />

            <ImageView
                android:id="@+id/index_img2"
                android:layout_marginLeft="10dp"
                android:layout_width="135dp"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                />
            <ImageView
                android:id="@+id/index_img3"
                android:layout_marginLeft="10dp"
                android:layout_width="135dp"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                />
            <ImageView
                android:id="@+id/index_img4"
                android:layout_marginLeft="10dp"
                android:layout_width="135dp"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                android:layout_marginRight="35dp"
                />
        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>
