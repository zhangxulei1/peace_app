<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/back6"
    android:id="@+id/notice_main">
    <ImageView
        android:id="@+id/backColor1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#55f4a460"
        android:visibility="visible"/>
    <ImageView
        android:id="@+id/backColor2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#55008b8b"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/backColor3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#55dda0dd"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/backColor4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#330000cd"
        android:visibility="gone"/>
    <!--开始控件-->
    <RelativeLayout
        android:id="@+id/before"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true"
        android:visibility="visible">
        <RelativeLayout
            android:descendantFocusability="blocksDescendants"
            android:id="@+id/middle_text"
            android:layout_width="150dp"
            android:layout_height="140dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:visibility="visible">
            <android.support.v4.view.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:visibility="visible">
            </android.support.v4.view.ViewPager>
            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:layout_marginTop="80dp"
                android:gravity="center"
                android:layout_marginLeft="35dp">
                <TextView
                    android:id="@+id/minutes"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:text="10"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:gravity="right"/>
                <TextView
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:text=":"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />
                <TextView
                    android:id="@+id/second"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:text="00"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />
            </LinearLayout>
        </RelativeLayout>
        <!--分钟齿轮-->
        <RelativeLayout
            android:descendantFocusability="blocksDescendants"
            android:id="@+id/select_minute"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:visibility="gone">
            <cn.edu.hebtu.software.peace.util.SelectMinute_PickView
                android:id="@+id/minute_pv"
                android:layout_width="100dp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/minute_tv"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="100dp"
                android:text="分钟"
                android:textColor="#ffffff"
                android:textSize="22dp"
                android:textStyle="bold" />
        </RelativeLayout>
    </RelativeLayout>
    <!--点击开始后布局-->
    <RelativeLayout
        android:id="@+id/later"
        android:layout_width="370dp"
        android:layout_height="370dp"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone">
        <cn.edu.hebtu.software.peace.util.ViewUtil
            android:id="@+id/wave"
            android:layout_width="270dp"
            android:layout_height="270dp"
            android:layout_centerInParent="true" />
        <RelativeLayout
            android:descendantFocusability="blocksDescendants"
            android:id="@+id/middle"
            android:layout_width="150dp"
            android:layout_height="140dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:visibility="visible">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                android:gravity="center">
                <TextView
                    android:id="@+id/minutes2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="10"
                    android:textColor="#000000"
                    android:textSize="50dp"
                    android:gravity="center"/>
                <TextView
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="match_parent"
                    android:text=":"
                    android:textColor="#000000"
                    android:textSize="50dp" />
                <TextView
                    android:id="@+id/second2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="00"
                    android:textColor="#000000"
                    android:textSize="50dp"
                    android:gravity="center"/>
            </LinearLayout>
            <android.support.v4.view.ViewPager
                android:id="@+id/viewPager2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:visibility="visible"
                android:layout_marginTop="80dp">
            </android.support.v4.view.ViewPager>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <ImageView
            android:id="@+id/top_left"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="140dp"
            android:layout_marginLeft="8dp"
            android:layout_height="match_parent"
            android:src="@drawable/test_top_left"/>
        <ImageView
            android:id="@+id/top_right"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="150dp"
            android:layout_marginRight="8dp"
            android:layout_height="match_parent"
            />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/top_center"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp">
        <LinearLayout
            android:id="@+id/top_center_point"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:visibility="gone">
            <ImageView
                android:id="@+id/item1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/welcome_circle"/>
            <ImageView
                android:id="@+id/item2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/welcome_circle"/>
            <ImageView
                android:id="@+id/item3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/welcome_circle"/>
            <ImageView
                android:id="@+id/item4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/welcome_circle"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/top_center_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/top_center2"
            android:visibility="visible"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="510dp"
        android:layout_centerHorizontal="true">
        <LinearLayout
            android:id="@+id/notice_start"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="@drawable/notice_start"
            android:visibility="visible"
            android:layout_marginLeft="30dp">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/notice_start_img"
                android:padding="13dp"
                android:layout_marginRight="-15dp"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="开始专注"
                android:gravity="center_vertical"
                android:textSize="22dp"
                android:textColor="#696969"
                android:textStyle="bold"
                android:layout_marginRight="10dp"/>
        </LinearLayout>
        <Button
            android:id="@+id/notice_pause"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="暂停"
            android:textSize="22dp"
            android:textColor="#ffffff"
            android:background="@drawable/notice_pause"
            android:layout_marginLeft="60dp"
            android:visibility="gone"/>
        <LinearLayout
            android:id="@+id/notice_middle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:visibility="gone">
            <Button
                android:id="@+id/notice_goon"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginRight="20dp"
                android:text="继续"
                android:textSize="18dp"
                android:textColor="#696969"
                android:background="@drawable/notice_start"/>
            <Button
                android:id="@+id/notice_stop"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:text="放弃"
                android:textSize="18dp"
                android:textColor="#ffffff"
                android:background="@drawable/notice_pause"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
