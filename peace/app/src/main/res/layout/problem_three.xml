<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".focusTotal.problem_yunxing"
    android:orientation="vertical"
    android:background="#ffffff">

    <TextView
        android:textSize="23sp"
        android:text="3.专注的计时器有异常"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"/>
    <TextView
        android:textSize="18sp"
        android:text="使用专注功能时，遇到计时中断的情况"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="30sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="20sp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="15sp"
            android:src="@drawable/redpoint" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="top"
            android:text="确认是否开启了‘沉浸模式’"
            android:textColor="#000000"
            android:textSize="16sp" />
    </LinearLayout>
    <TextView
        android:text="请在「专注」界面右上方「专注选项」内确认是否开启了「沉浸模式」，该模式下任何切换到其他 app 的行为都会导致专注失败。如果你希望专注过程中仍然使用其他 app，请关闭「沉浸模式」。"
        android:textColor="#cecece"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="20sp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img2"
            android:layout_width="wrap_content"
            android:layout_height="15sp"
            android:src="@drawable/redpoint" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="top"
            android:text="确认当前使用的为最新版本"
            android:textColor="#000000"
            android:textSize="16sp" />
    </LinearLayout>
    <TextView
        android:text="我们持续关注每一位用户的使用情况，在每一次产品更新中，都会对若干问题进行修复和优化，前往App Store升级到最新版，有助于减少异常问题出现的概率"
        android:textColor="#cecece"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="若以上步骤无法解决您遇到的问题，请联系我们"
        android:textColor="#000000"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>