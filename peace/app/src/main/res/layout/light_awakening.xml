<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backcolor"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:src="@drawable/returnback" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:text="轻唤醒"
            android:textColor="#ffffff"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lightawake"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text="轻唤醒"
            android:textColor="#ffffff"
            android:textSize="18dp" />
        <ImageView
            android:id="@+id/start_light"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/circle_select"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/awakescene"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="25dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/text_scene"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="唤醒场景"
            android:textColor="#ffffff"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/scene_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="默认场景"
            android:textColor="#E6E6FA"
            android:textSize="16dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/awaketime"

        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="25dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="唤醒时间"
            android:textColor="#ffffff"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="3  分钟"
            android:textColor="#E6E6FA"
            android:textSize="16dp" />

    </LinearLayout>

    <View
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_height="1dp"
        android:background="#33E0EEEE"
        android:layout_width="match_parent"/>
    <TextView
        android:layout_marginLeft="70dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="打开轻唤醒后，我们会根据你的睡眠状态提前播放柔和的自然声音，帮你从睡梦中轻轻苏醒，以获得更好的起床体验。"
        android:textColor="#E6E6FA"
        android:textSize="16dp" />

</LinearLayout>