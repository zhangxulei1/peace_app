<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JiuQinShiJian"
    android:orientation="vertical"
    android:background="@drawable/backcolor">
    <LinearLayout
        android:id="@+id/l"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/top_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:src="@drawable/returnback" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:text="就寝提醒"
            android:textColor="#ffffff"
            android:textSize="20dp" />
        <!--<TextView-->
            <!--android:id="@+id/top_save"-->
            <!--android:layout_marginLeft="90dp"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_weight="2"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center"-->

            <!--android:text="保存"-->
            <!--android:textColor="#ffffff"-->
            <!--android:textSize="16dp" />-->

    </LinearLayout>
        <TextView
            android:textColor="#ebe6e6"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:textSize="16dp"
            android:text="提醒时间"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <cn.edu.hebtu.software.peace.CalendarView_Jiuqintixing
            android:layout_width="50dp"
            android:id="@+id/cv1"
            android:layout_marginLeft="20dp"
            android:layout_height="150dp" />
        <TextView
            android:text=":"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <cn.edu.hebtu.software.peace.CalendarView_Jiuqintixing
            android:layout_width="50dp"
            android:id="@+id/cv2"
            android:layout_marginLeft="10dp"
            android:layout_height="150dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:id="@+id/repeat"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="50dp">
        <TextView
            android:layout_marginLeft="15dp"
            android:textColor="#ffffff"
            android:textSize="16dp"
            android:text="重复"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="15dp"
            android:textColor="#ebe6e6"
            android:text="工作日 >"
            android:id="@+id/workday"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <Button
        android:background="#00000000"
        android:layout_marginTop="100dp"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:text="关闭提醒"
        android:gravity="center"
        android:id="@+id/btn_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>