<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".focusTotal.problem_yunxing"
    android:orientation="vertical"
    android:background="#ffffff">

    <TextView
        android:textSize="23sp"
        android:text="4.声音播放的问题"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"/>
    <TextView
        android:textSize="18sp"
        android:text="声音内容很少，购买会员后没有增加更多声音"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="30sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="20sp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="15sp"
            android:src="@drawable/redpoint" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="top"
            android:text="前往声音场景页发现更多声音"
            android:textColor="#000000"
            android:textSize="16sp" />
    </LinearLayout>
    <TextView
        android:text="在专注、睡眠、放松功能顶部找到圆点状的入口，点击即可进入声音场景页。您可以在这里添加、管理声音场景。声音场景每月持续更新，成为会员可畅享所有场景"
        android:textColor="#cecece"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="18sp"
        android:text="使用专注功能时，出现声音无法播放的情况"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="30sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="20sp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img2"
            android:layout_width="wrap_content"
            android:layout_height="15sp"
            android:src="@drawable/redpoint" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="top"
            android:text="确保没有静音"
            android:textColor="#000000"
            android:textSize="16sp" />
    </LinearLayout>
    <TextView
        android:text="点击专注界面右上角的图片按钮，确认没有静音"
        android:textColor="#cecece"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="20sp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img3"
            android:layout_width="wrap_content"
            android:layout_height="15sp"
            android:src="@drawable/redpoint" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="top"
            android:text="确保设备音量调至合适大小"
            android:textColor="#000000"
            android:textSize="16sp" />
    </LinearLayout>
    <TextView
        android:text="结束通知的铃声音量会跟随设备系统的设置，有可能因太小声而错过，请调至合适的音量"
        android:textColor="#cecece"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:text="若以上步骤无法解决您遇到的问题，请联系我们"
        android:textColor="#000000"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>