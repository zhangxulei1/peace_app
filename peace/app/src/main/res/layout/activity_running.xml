<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:background="@mipmap/back6"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".breathe.Running"
android:orientation="vertical">


    <cn.edu.hebtu.software.peace.breathe.utils.LiveBottomView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <FrameLayout
            android:layout_marginLeft="80dp"
            android:layout_marginTop="250dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:gravity="center">
            <TextView
                android:text="准备呼吸"
                android:id="@+id/tv"
                android:textColor="#ffffff"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:textSize="20sp"/>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/circle"
            android:layout_width="270dp"
            android:layout_height="270dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="160dp">

            <cn.edu.hebtu.software.peace.breathe.utils.WaveFunctionView_running
                android:id="@+id/BezierView_running"
                android:layout_width="250dp"
                android:layout_marginTop="10dp"
                android:layout_height="250dp"
                android:layout_gravity="center">

            </cn.edu.hebtu.software.peace.breathe.utils.WaveFunctionView_running>

        </LinearLayout>
    </cn.edu.hebtu.software.peace.breathe.utils.LiveBottomView>
    <Button
        android:id="@+id/btn_finish"
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:background="@drawable/huxishape"
        android:text="结束"
        android:textColor="#ffffff"
        android:textSize="20dp" />


</LinearLayout>