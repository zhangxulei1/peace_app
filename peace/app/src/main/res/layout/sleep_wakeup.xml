<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backcolor"
    android:orientation="vertical">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="10dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/back"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:layout_weight="1"
        android:src="@drawable/returnback" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:gravity="center_vertical"
        android:text="起床挑战"
        android:textColor="#ffffff"
        android:textSize="20dp" />
</LinearLayout>

    <LinearLayout
        android:id="@+id/task"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:background="@drawable/wakeup_shape">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="无任务"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:gravity="center_vertical"/>
            <ImageView
                android:id="@+id/taskheart"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/select"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="15dp"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:text="点击按钮即可结束睡眠"
            android:textColor="#F5FFFA"
            android:textSize="16dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/shake"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:orientation="vertical"
        android:background="@drawable/wakeup_shape">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="摇一摇"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:gravity="center_vertical"/>
            <ImageView
                android:id="@+id/shakeheart"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/select"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="15dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="-15dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp">
            <TextView
                android:layout_width="75dp"
                android:layout_height="40dp"
                android:text="摇一摇 *"
                android:textColor="#F5FFFA"
                android:textSize="16dp"
                android:gravity="center_vertical"/>
            <TextView
                android:id="@+id/times"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:text="60"
                android:textColor="#F5FFFA"
                android:textSize="16dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置"
            android:textSize="14dp"
            android:textColor="#ffffff"
            android:layout_gravity="right"
            android:layout_marginRight="56dp"
            android:visibility="visible"/>
        <TextView
            android:layout_marginLeft="140dp"
            android:id="@+id/start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预览"
            android:textSize="14dp"
            android:textColor="#ffffff"
            android:layout_gravity="right"
            android:visibility="visible"/>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>
